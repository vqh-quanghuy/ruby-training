<%= form_with(model: friend) do |form| %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Ex: Huy" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Ex: Vu" %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control", placeholder:"Ex: abc@mail.com" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_string, style: "display: block" %>
    <%= form.text_field :phone_string, class:"form-control", placeholder:"Ex: 0908150545" %>
  </div>

  <div class="form-group">
    <%= form.label :facebook, style: "display: block" %>
    <%= form.text_field :facebook, class:"form-control", placeholder:"Ex: abc" %>
  </div>

  <div class="my-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
